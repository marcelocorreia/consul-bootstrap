[Unit]
Description=Consul Agent
Requires=network-online.target private-ip.service
After=network-online.target private-ip.service

[Service]
Type=idle
EnvironmentFile=-/etc/default/private-ip
Environment=GOMAXPROCS=2
ExecStart=/usr/local/bin/consul agent {{consul.agent_mode}} -datacenter {{consul.datacenter}} -config-dir {{consul.config_dir}} -data-dir /var/consul/data/ -bind ${PRIVATE_IP} -bootstrap-expect {{consul.bootstrap_expect}} -retry-join 'provider=aws tag_key={{consul.join_tag_key}} tag_value={{consul.join_tag_value}}'
Requires=network-online.target
ExecReload=/bin/kill -HUP $MAINPID
Restart=on-failure
KillSignal=SIGINT

[Install]
WantedBy=multi-user.target